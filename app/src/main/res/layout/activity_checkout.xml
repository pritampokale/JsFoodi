<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey">

    <LinearLayout
        android:id="@+id/upiMethodContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upiMethodContainer1"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="11dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/amazon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="3"
            android:fontFamily="@font/open_sans"
            android:text="Pay With AmazonPay"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/forward_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upiMethodContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upiMethodContainer"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="11dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/paytm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="3"
            android:fontFamily="@font/open_sans"
            android:text="Pay With Paytm"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/forward_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upiMethodContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creditCardMethodContainer"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="11dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/fpay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="3"
            android:fontFamily="@font/open_sans"
            android:text="Pay With Google Pay"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/forward_arrow" />
    </LinearLayout>

    <include
        android:id="@+id/paymentMethodToolBar"
        layout="@layout/simple_toolbar" />

    <LinearLayout
        android:id="@+id/textContainers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentMethodToolBar"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/choose_your_payment_method"
            android:textColor="@color/colorAccent"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/totalAmountItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/open_sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cashMethodContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textContainers"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="11dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/cash_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="3"
            android:fontFamily="@font/open_sans"
            android:text="Cash On Delivery"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/forward_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/creditCardMethodContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cashMethodContainer"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="11dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/credit_card_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="3"
            android:fontFamily="@font/open_sans"
            android:text="Credit/Debit/Paytm"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/forward_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upiMethodContainer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upiMethodContainer2"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="11dp"
        android:weightSum="5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/bhim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="3"
            android:fontFamily="@font/open_sans"
            android:text="Pay With BHIM UPI"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/forward_arrow" />
    </LinearLayout>
</RelativeLayout>
