<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/resImageContainer"
            android:layout_width="95dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/favResImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/favResName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorAccent"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/favResCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favResName"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:fontFamily="@font/open_sans"
            android:text="Biryani, Mughlai, North Indian"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/favResLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favResCategories"
            android:layout_marginStart="17dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:fontFamily="@font/open_sans"
            android:text="Near Jyoti gas agency, Partur"
            android:textSize="13sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/favResLocation"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/favoriteResPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/resImageContainer"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
