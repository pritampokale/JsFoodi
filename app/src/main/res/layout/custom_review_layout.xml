<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:padding="11dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/userReviewProfileImage" android:layout_width="37dp" android:layout_height="37dp" android:src="@drawable/user_placeholder"/>
    <TextView android:textSize="19sp" android:textColor="@color/colorAccent" android:id="@+id/userReviewName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Pritam Pokale" android:layout_alignParentTop="true" android:fontFamily="@font/open_sans" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/userReviewProfileImage"/>
    <TextView android:textSize="10sp" android:textColor="@color/white" android:id="@+id/recommendTextLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/userReviewName" android:fontFamily="@font/open_sans_semibold" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/userReviewProfileImage"/>
    <View android:id="@+id/reviewDivider" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="7dp" android:layout_marginBottom="5dp" android:layout_below="@+id/recommendTextLabel" android:layout_marginStart="15dp" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/userReviewProfileImage"/>
    <TextView android:textSize="15sp" android:textColor="@color/gray" android:id="@+id/userReviewText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/reviewDivider" android:fontFamily="@font/open_sans" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/userReviewProfileImage"/>
</RelativeLayout>
