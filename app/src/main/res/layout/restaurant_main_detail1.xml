<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/resImage3"
                android:layout_width="112dp"
                android:layout_height="140dp"
                android:alpha="0.3"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant_image_placeholder" />

            <ImageView
                android:id="@+id/resImage"
                android:layout_width="112dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant_image_placeholder" />

            <TextView
                android:id="@+id/resName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/resImage"
                android:fontFamily="@font/open_sans"
                android:text="Barista,Sandwiches"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resCuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resName"
                android:layout_alignStart="@+id/resName"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/open_sans"
                android:text="Barista,Sandwiches"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resCuisine"
                android:layout_alignStart="@+id/resCuisine"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:rating="4"
                android:theme="@style/RatingBar"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ratingAggregate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resCuisine"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/ratingBar"
                android:fontFamily="@font/open_sans"
                android:text="4.5"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/average_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_alignStart="@+id/ratingBar"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/open_sans"
                android:text="â‚¹200 per person | "
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/average_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="11dp"
                android:layout_toEndOf="@+id/average_price"
                android:fontFamily="@font/open_sans"
                android:text="45 Mins"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/resImage3"
                android:layout_alignBottom="@+id/resImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/close" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
